{
    "name": "cosmicdivision_bp",
    "version": "1.0.0",
    "description": "Cosmic Division Front End Boilerplate",
    "main": "src/entry.js",
    "scripts": {
        "start": "parcel src/index.html",
        "build": "npm run format && parcel build src/index.html --public-url ./",
        "format": "npm run format-css && npm run format-js && npm run format-html",
        "format-css": "prettier --write src/styles/**/*.{css,scss} ",
        "format-js": "prettier --write src/**/*.{js,jsx}",
        "format-html": "prettier --write src/**/*.html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AndreBClark/cosmicdivision-boilerplate.git"
    },
    "keywords": [],
    "author": "Andre Clark",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/AndreBClark/cosmicdivision-boilerplate/issues"
    },
    "homepage": "https://github.com/AndreBClark/cosmicdivision-boilerplate#readme",
    "dependencies": {
        "tailwindcss": "^1.2.0"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.0.4",
        "cssnano": "^4.1.10",
        "cssnano-preset-advanced": "^4.0.7",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "prettier-eslint-cli": "^5.0.0",
        "eslint": "^6.8.0",
        "@svgr/parcel-plugin-svgr": "^5.0.1",
        "autoprefixer": "^9.7.3",
        "sass": "^1.25.0",
        "stylelint": "^13.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-prettier": "^1.1.2",
        "postcss-cli": "^6.1.3",
        "postcss-import": "^12.0.1",
        "postcss-modules": "^1.4.1",
        "postcss-preset-env": "^6.7.0"
    }
}